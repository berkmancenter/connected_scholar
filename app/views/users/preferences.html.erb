<h2>Preferences</h2>
<%= form_tag user_preferences_path do  %>
    <p>
      <%= label_tag "Default Citation Format:" %>
       <%= select_tag :citation_format,
                      options_for_select(
                              [['MLA', :mla], ['APA', :apa]],
                              current_user.preferences[:citation_format] || :mla) %>
    </p>

    <p><%= submit_tag "Save" %></p>
<% end %>