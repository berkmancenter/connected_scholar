<div class="comment_item">
  <p class="comment_header">
    <span class="comment_author"><%= comment.author.name %></span> said...
  </p>

  <p class="comment_text">
    <%= comment.comment_text %>
  </p>

  <div class="comment_date">

    <p>
      at
      <% if comment.created_at.to_date == Date.today %>
          <%= comment.created_at.strftime("%I:%M %p") %>
      <% else %>
          <%= comment.created_at.strftime("%d/%m/%y %I:%M %p") %>
      <% end %>
    </p>
  </div>
  <div class="comment_delete">
    <%= link_to content_tag(:span, 'Delete Comment', :class => "ui-icon ui-icon-trash"), [comment.document, comment],
                :alt => "Delete Comment",
                :confirm => 'Are you sure you want to delete this comment?',
                :method => :delete %>
  </div>
</div>
<hr class="comment_divider"/>