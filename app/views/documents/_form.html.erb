<%= form_for(@document) do |f| %>
    <% if @document.errors.any? %>
        <div id="errorExplanation">
          <h2><%= pluralize(@document.errors.count, "error") %> prohibited this post from being saved:</h2>
          <ul>
            <% @document.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :citation_format %>
      <br />
      <%= f.select :citation_format,
                      options_for_select(
                              Document::CITATION_FORMATS, @document.citation_format) %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>