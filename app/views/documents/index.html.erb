<h1>Listing Documents</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Owner</th>
    <th>Created At</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
<% @documents.each do |doc| %>
  <tr>
    <td><%= doc.name %></td>
    <td></td>
    <td><%= doc.created_at %></td>
    <td><%= link_to 'Show', doc %></td>
    <td><%= link_to 'Edit', edit_document_path(doc) %></td>
    <td><%= link_to 'Destroy', doc, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
 
