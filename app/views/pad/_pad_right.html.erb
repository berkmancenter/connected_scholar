<script type="text/javascript" src="/js/jquery_ujs.js"></script>
<script type="text/javascript">
    jQuery(document).ready(function() {
        $("#choices").accordion({
            collapsible: true
        });
    });
</script>


<div id="padRight">
  <h1>Resources</h1>
  <br/>

  <div id="choices">

    <h3 style="font-weight: bold;"><a href="#">Document Details</a></h3>

    <div>
      <p>
        <b>Name:</b>
        <%= @document.name %>
      </p>

      <p>
        <b>Owner:</b>
        <%= @document.owner.name %>
      </p>

      <p>
        <b>Created At:</b>
        <%= @document.created_at %>
      </p>

      <p>
        <b>Updated At:</b>
        <%= @document.updated_at %>
      </p>

      <p><%= link_to 'Manage', @document %></p>
    </div>

    <h3 style="font-weight: bold;"><a href="#">Search</a></h3>

    <div>
      <%= render :partial => "search/form" %>
    </div>

    <h3 style="font-weight: bold;"><a href="#">Recommendations</a></h3>

    <div>
      <%= render :partial => "resources/resource", :collection => @document.recommended_resources %>
    </div>

    <h3 style="font-weight: bold;"><a href="#">Comments</a></h3>

    <div>
      <%= render :partial => "comments/comment", :collection => @document.comments %>
      <br/>
      <%= render :partial => "comments/form_dialog" %>
    </div>

  </div>
</div>
